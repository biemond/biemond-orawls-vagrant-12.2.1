# NOTE: This is a template to configure mod_weblogic, generated by Puppet.

<IfModule weblogic_module>
<LocationMatch "<%= @location %>">
  SetHandler weblogic-handler

  <% if @servers.size == 1 %>
  <% host, port = @servers[0].split(/:/) %>
  WebLogicHost <%= host %>
  WebLogicPort <%= port || @default_port %>
  <% else %>
  WebLogicCluster <%= @servers.map { |server| host, port = server.split(/:/); "#{host}:#{port || @default_port}" }.join ',' %>
  <% end %>
</LocationMatch>
</IfModule>
